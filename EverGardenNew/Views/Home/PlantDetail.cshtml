@model EverGardenNew.Models.Plant

@{
    ViewData["Title"] = "PlantDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pt-4 ml-5" style="display: flex;">
    <div class="col-3">
        <div class="card text-white bg-dark mb-3">
            <div class="card-header" style="background-color: #75C260; color: black; font-size: 20px;">
                <span class="font-weight-bold">@Html.DisplayFor(model => model.Name)</span>
                <span style="font-family: serif">
                    (@Html.DisplayFor(model => model.ScientificName))
                </span>
            </div>
            <div class="card-body">
                <h4>Categories</h4>
                <p class="card-text">
                    @Html.DisplayFor(model => model.CategoryEdible.Name)/@Html.DisplayFor(model => model.CategoryPlace.Name)
                </p>
                <h4>Climate</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Climate)</p>
                <h4>Watering</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Watering)</p>
            </div>
        </div>
        <div class="card text-center text-white bg-dark">
            <div class="card-body">
                <h5 class="card-title">Add to catalog ?</h5>
                <p class="card-text">
                    Schedule and instructions of taking care will automatically appear
                    in your personal schedule page.
                </p>
                <div style="display: flex; justify-content: center">
                    <button class="btn" style="background-color: #75C260; margin-left: 10px">
                        Add
                    </button>
                    <a class="btn" style="background-color: white; margin-left: 10px" asp-action="SearchPlant">Back to List</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-9">
        <div class="card mb-3 bg-dark text-white" style="width: 1300px">
            <img src="@Html.DisplayFor(model => model.LargeImage)" class="card-img-top" alt="..." style="height: 500px" />
            <div class="card-body">
                <h4 class="card-title">Biological desciption</h4>
                <p class="card-text">@Html.DisplayFor(model => model.BioDescription)</p>
                <h4 class="card-title">Spread</h4>
                <p class="card-text">@Html.DisplayFor(model => model.SpreadingArea)</p>
                <h4 class="card-title">Tools</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Tools)</p>
            </div>
        </div>
    </div>
</div>

