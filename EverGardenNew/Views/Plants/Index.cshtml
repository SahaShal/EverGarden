@model IEnumerable<EverGardenNew.Models.Plant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display: flex;">
    <partial name="_AdminSidebar" />
    <div class="col-10">
        <div style="display: flex; justify-content: space-between; margin-top: 10px">
            <h2>Index</h2>
            <p style="margin-top: 4px; margin-bottom: 0px;">
                <a class="btn" style="background-color: black; color: white" asp-action="Create">Create New</a>
            </p>
        </div>

        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" /> |
                    <a asp-action="Index">Back to Full List</a>
                </p>
            </div>
        </form>

        <table class="table table-striped table-dark mt-1">
            <thead style="background-color: #4C8C35">
                <tr>
                    <th>
                        <!--@Html.DisplayNameFor(model => model.Name)-->
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Name)</a>
                    </th>
                    <th>
                        <!--@Html.DisplayNameFor(model => model.ScientificName)-->
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["ScientificNameSortParm"]">@Html.DisplayNameFor(model => model.ScientificName)</a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryEdible)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryPlace)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Climate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Watering)
                    </th>*@
                    <th style="width: 760px">
                        @Html.DisplayNameFor(model => model.ShortDescription)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.BioDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SpreadingArea)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SmallImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LargeImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tools)
                    </th>*@
                <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ScientificName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryEdible.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryPlace.Name)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Climate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Watering)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortDescription)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.BioDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SpreadingArea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SmallImage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LargeImage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tools)
                        </td>*@
                        <td>
                            <a class="btn" style="background-color: white" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn" style="background-color: #75C260" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
