@model IEnumerable<EverGardenNew.Models.Plant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScientificName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryEdible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryPlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Climate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watering)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BioDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpreadingArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SmallImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LargeImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tools)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScientificName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryEdible.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryPlace.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Climate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Watering)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BioDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpreadingArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SmallImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LargeImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tools)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
