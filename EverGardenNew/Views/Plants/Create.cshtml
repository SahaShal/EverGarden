@model EverGardenNew.Models.Plant

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display: flex;">
    <partial name="_AdminSidebar" />
    <div class="col-10">
        <div style="display: flex; justify-content: space-between; margin-top: 10px">
            <h2>Create Plant</h2>
            <p style="margin-top: 4px; margin-bottom: 0px;">
                <a class="btn" style="background-color: black; color: white" asp-action="Index">Back to List</a>
            </p>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ScientificName" class="control-label"></label>
                        <input asp-for="ScientificName" class="form-control" />
                        <span asp-validation-for="ScientificName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryEdibleID" class="control-label"></label>
                        <select asp-for="CategoryEdibleID" class="form-control" asp-items="ViewBag.CategoryEdibleID"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryPlaceID" class="control-label"></label>
                        <select asp-for="CategoryPlaceID" class="form-control" asp-items="ViewBag.CategoryPlaceID"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Climate" class="control-label"></label>
                        <input asp-for="Climate" class="form-control" />
                        <span asp-validation-for="Climate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Watering" class="control-label"></label>
                        <input asp-for="Watering" class="form-control" />
                        <span asp-validation-for="Watering" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShortDescription" class="control-label"></label>
                        <input asp-for="ShortDescription" class="form-control" />
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BioDescription" class="control-label"></label>
                        <input asp-for="BioDescription" class="form-control" />
                        <span asp-validation-for="BioDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SpreadingArea" class="control-label"></label>
                        <input asp-for="SpreadingArea" class="form-control" />
                        <span asp-validation-for="SpreadingArea" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SmallImage" class="control-label"></label>
                        <input asp-for="SmallImage" class="form-control" />
                        <span asp-validation-for="SmallImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LargeImage" class="control-label"></label>
                        <input asp-for="LargeImage" class="form-control" />
                        <span asp-validation-for="LargeImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tools" class="control-label"></label>
                        <input asp-for="Tools" class="form-control" />
                        <span asp-validation-for="Tools" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn" style="background-color: #75C260"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
